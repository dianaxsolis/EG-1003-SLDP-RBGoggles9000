    GreenGridLayoutCombos:
    GreenFashionCombinations:
    BlueGridLayoutCombos:
    BlueFashionCombinations:

#: import utils kivy.utils

#LayoutForCombos

<StartingScreen>:
    name:"first"
    
    GridLayout:
        cols: 1	
        rows: 1

        Button:
            text:'Welcome to RBGoggles9000!'
            font_size: 32
            on_release:
                if app.content == '1': app.root.current = "firstred"
                if app.content == '2': app.root.current = "firstgreen"
                if app.content == '3': app.root.current = "firstblue"
                root.manager.transition.direction = "left"
                
#Red Layout

<RedGridLayoutCombos>:
    name: "firstred"

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Complementary Color"
                font_size: 20

            TextInput:
                text: "Green"

            Label:
                text: "Triadactic Colors"
                font_size: 20

            TextInput:
                text: "Blue and Yellow"

            Label:
                text: "Tetradic Colors"
                font_size: 20

            TextInput:
                text: "Blue, Red, and Orange"

        Button:
            text: "Would you like to see possible fashion combinations with the color?"
            font_size: 20
            on_release:
                app.root.current = "secondred"
                root.manager.transition.direction = "left"

